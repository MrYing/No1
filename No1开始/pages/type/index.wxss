.swiper-vertical-tab{width:100px;position:absolute;left:0px;top:0;min-height:100%;}
.swiper-vertical-tab view{height:50px;font-size:15px;color:#505050;text-align:center;box-sizing:border-box;padding-top:12px;}
.swiper-vertical-tab{background:#eee;}
.swiper-vertical-tab view.on{background:#fff;}

.swiper-vertical-box{box-sizing:border-box; flex: 1;}
.swiper-vertical-box .vertical-list{height:300px;}
.swiper-vertical-box .vertical-list .title{height:40px;padding-left:20px;background:#f5f5f5;color:#646464;line-height:40px;font-size:15px;display:block;}
.noShop{ text-align: center; margin-top: 40rpx; font-size: 28rpx; color: #999}